             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.MenuOption.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="0,2,0,0" BorderBrush="#F0F0F0">
        <Grid Background="LightCyan" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" BorderThickness="1" BorderBrush="Gray" CornerRadius="10,10,10,10" Margin="5">
                
            </Border>

            <Border Grid.Row="1" BorderThickness="1" BorderBrush="Gray" CornerRadius="10,10,10,10" Margin="5">

            </Border>

            <Border Grid.Row="2" BorderThickness="1" BorderBrush="Gray" CornerRadius="10,10,10,10" Margin="5">

            </Border>

            <Grid Grid.Row="3" Background="Gray">

            </Grid>
        </Grid>
    </Border>
</UserControl>
